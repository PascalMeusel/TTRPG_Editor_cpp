{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project (g++)",
            "type": "shell",
            "command": "g++",
            "args": [
                // Your C++ source files that need to be compiled
                "main.cpp",
                "Application.cpp",
                "Views/MainMenu/MainMenuWindowView.cpp",
                
                "imgui/imgui.cpp",
                "imgui/imgui_demo.cpp",
                "imgui/imgui_draw.cpp",
                "imgui/imgui_tables.cpp",
                "imgui/imgui_widgets.cpp",
                "imgui/backends/imgui_impl_glfw.cpp",
                "imgui/backends/imgui_impl_opengl3.cpp",

                // Add debug information to the executable
                "-g",

                // === INCLUDE PATHS ===
                // Tells the compiler where to find header files (.h)
                "-I./",                                  // 1. Look in the project's root folder
                "-I./imgui/",                            // 2. Look in the main imgui folder
                "-IC:/glfw-3.4/include/",                // 3. Look in the GLFW include folder

                // === LIBRARY PATHS ===
                // Tells the linker where to find library files (.a)
                "-LC:/glfw-3.4/lib-mingw-w64/",          // 4. Look in the GLFW library folder for MinGW

                // === LIBRARIES TO LINK ===
                // The specific libraries your program needs to link against
                "-lglfw3",
                "-lgdi32",      // A Windows library required by GLFW
                "-lopengl32",

                // === OUTPUT ===
                // The name of the final executable file
                "-o",
                "my_app"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compiles the project using g++"
        }
    ]
}